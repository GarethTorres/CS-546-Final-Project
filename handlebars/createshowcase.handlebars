<script id="createshowcase-template" type="text/x-handlebars-template">
  <h1>Create Showcase</h1>
  <form action="#" method="POST" enctype="multipart/form-data">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required>

    <label for="description">Description:</label>
    <textarea id="description" name="description" rows="5" required></textarea>

    <label for="tags">Tags:</label>
    <input type="text" id="tags" name="tags" required>

    <label for="file">Upload file:</label>
    <input type="file" id="file" name="file" accept=".jpg,.jpeg,.png,.gif,.pdf" required>

    <div class="preview">
      <h2>Preview</h2>
      <div class="showcase">
        <img src="{{previewImage}}" alt="Showcase Preview">
      </div>
    </div>

    <button type="submit">Create Showcase</button>
  </form>
</script>
