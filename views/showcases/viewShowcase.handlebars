<div class="showcase" id="singleShowcase">
    <a href="/users/profile/{{data.creator}}">
        <h1>
            {{data.userid}}
        </h1>
    </a>
    <!-- if canEdit block -->
    {{#if data.canEdit}}
    <a href="/showcases/edit/{{data._id}}" class="editIcon">
        <img src="/public/images/edit.png" alt="Edit this showcase" />
    </a>
    {{/if}}
    <!-- end if block -->
    <h2>{{ data.date }}</h2>
    <!-- if blog block -->
    {{#if data.blog}}
    <a href="/blogs/{{data.blog._id}}">
        <p>{{ data.blog.blogName }}</p>
    </a>
    {{#if data.blog.youtubeLink}}
    <iframe width="420" height="315" src="{{data.blog.youtubeLink}}">
    </iframe>
    {{/if}}
    {{/if}}
    <!-- end if block -->
    <br />
    <p>{{ data.text }}</p>
    <!-- if likeList block -->
    <div class="likeDiv">
        {{#if data.likeList}}
        <p>
            <em class="likeList">{{ data.likeList }} like this post</em>
        </p>
        {{/if}}
    </div>
    <!-- end if block -->
    <!-- if liked block -->
    {{#if data.liked}}
    <a href="" class="showcaseInteraction likeShowcase">
        Unlike
    </a>
    {{else}}
    <a href="" class="showcaseInteraction likeShowcase">
        Like
    </a>
    {{/if}}
    <!-- end if block -->
    <a href="/comment/addcomment/{{data._id}}" class="showcaseInteraction">
        Comment
    </a>
    <a href="/feed" class="showcaseInteraction">
        Return to Feed
    </a>
    <!-- if block for comments -->
    {{#if data.comments}}
    <div class="commentDiv">
        <!-- iterate through the comments -->
        {{#each data.comments}}
        <div class="individualComment">
            {{#if isCommentOwner}}
                <a class="btn-del comment-delete-icon" data-id="{{_id}}">
                    <img src="/public/images/trash.svg" alt="delete-comment">
                </a>
            {{/if}}
            <p class="commentUser">{{userid}}</p>
            <p class="commentText">{{comment}}</p>
        </div>
        {{/each}}
    </div>
    {{/if}}

    <!-- end if block -->
    <!-- Hidden postID  -->
    <p class="showcaseID" hidden>{{ data._id }}</p>
</div>
<script src="/public/js/feed.js"></script>
